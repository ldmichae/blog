---
import { cn } from '~/lib/utils'

interface Props {
  class?: string
  variant?: 'default' | 'gradient' | 'subtle' | 'outline'
  size?: 'sm' | 'md'
  showIcon?: boolean
}

const { class: className, variant = 'gradient', size = 'sm', showIcon = true }: Props = Astro.props

const sizeClasses = {
  sm: 'text-xs px-2.5 py-1 gap-1',
  md: 'text-sm px-3 py-1.5 gap-1.5',
}

const variantClasses = {
  default: 'bg-primary/10 text-primary hover:bg-primary/20 border border-transparent',
  gradient:
    'border border-transparent bg-gradient-to-r from-slate-500/15 via-blue-500/15 to-indigo-500/15 text-slate-700 dark:text-slate-300 hover:from-slate-500/25 hover:via-blue-500/25 hover:to-indigo-500/25',
  subtle: 'bg-muted/30 text-muted-foreground hover:bg-muted/50 hover:text-foreground border border-transparent',
  outline: 'bg-muted/30 text-muted-foreground border border-border hover:bg-muted/50 hover:text-foreground',
}
---

<span
  class={cn(
    'inline-flex items-center font-medium rounded transition-colors duration-200',
    sizeClasses[size],
    variantClasses[variant],
    className
  )}
  title="Recommended post"
>
  {showIcon && <span class="icon-[ph--sparkle-fill] opacity-70" />}
  <span class="font-semibold tracking-wide">RECOMMEND</span>
</span>
